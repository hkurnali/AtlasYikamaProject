@model List<AtlasYikamaProject.DAL.Entitys.Comment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorumlar Listesi</h2>
<table class="table table-bordered">

    <tr>

        <th>İsim</th>
        <th>Açıklma</th>
        <th>Görsel</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>

            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Image</td>

            <td><a href="/Comment/UpdateComment/@item.CommentID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
