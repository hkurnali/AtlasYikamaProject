
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

@Html.Action("PartialHead", "Default")

<body>
    <!-- header -->
    @Html.Action("PartialHeader", "Default")
    <!-- //header -->
    <!-- banner 2 -->
    <div class="banner2-w3ls">

    </div>
    <!-- //banner 2 -->
    <!-- page details -->
    <div class="breadcrumb-agile">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Default/Index/">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">İletişim</li>
            </ol>
        </nav>
    </div>
    <!-- //page details -->
    <!-- contact -->
    <div class="contact py-5">
        <div class="container py-xl-5 py-lg-3">
            <h2 class="tittle mb-xl-5 mb-4 text-dark text-uppercase font-weight-bold pl-4 py-3">İLETİŞİM</h2>
            <div class="alert alert-info" id="sendmessage">@ViewBag.uyari</div>
            <div class="row contact_wthreerow agileits-w3layouts pt-4">
                <div class="col-lg-7 w3l_contact_form">
                    <form action="/Contact/Index/" method="post">
                        <div class="form-group">
                            <input type="text" name="Adsoyad" class="form-control" placeholder="İsminiz" required="">
                        </div>
                        <div class="form-group">
                            <input type="email" name="Mail" class="form-control" placeholder="Mail Adresniz" required="">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Telefon" class="form-control" placeholder="Telefon Numaranız" required="">
                        </div>
                        <div class="form-group">
                            <textarea name="Mesaj" class="form-control" placeholder="Mesaj.."></textarea>
                        </div>
                        <input type="submit" value="Mesaj Gönder">
                    </form>
                </div>
                <div class="col-lg-5 agileits_w3layouts_contact_gridl mt-lg-0 mt-5">
                    <div class="agileits_mail_grid_right_grid">
                        <h4 class="mb-4 title-2-agiles">Atlas Koltuk Yıkama</h4>
                        <p>Nerde olursanız olun temizleğe bir telefon kadar yakınsınız.</p>
                    </div>
                    <div class="agileits_mail_grid_right_grid mt-md-5 mt-4">
                        <h4 class="mb-4 title-2-agiles">Adres</h4>
                        <ul class="contact_info list-unstyled">
                            <li>
                                <i class="fas fa-location-arrow mr-3"></i>Cumhuriyet Mh. Demirtaş / Bursa
                            </li>
                            <li class="my-4">
                                <i class="fas fa-envelope-open mr-3"></i>
                                <a href="mailto:aatlasyyikama@gmail.com">aatlasyyikama@gmail.com</a>
                            </li>
                            <li>
                                <i class="fas fa-phone mr-3"></i>0 545 905 51 69
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //contact -->
    <!-- map -->
    <div class="w3ls_map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24360.7250178188!2d29.082775155898865!3d40.25151717166683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1696421806452!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                style="border:0"></iframe>
    </div>
    <!-- //map -->
    <!-- footer -->
    @Html.Action("PartialFooter", "Default")
    <!-- //footer -->
    <!-- Js files -->
    <!-- JavaScript -->
    <script src="~/Templates/web/js/jquery-2.2.3.min.js"></script>
    <!-- Default-JavaScript-File -->
    <!-- smooth scrolling -->
    <script src="~/Templates/web/js/SmoothScroll.min.js"></script>
    <!-- move-top -->
    <script src="~/Templates/web/js/move-top.js"></script>
    <!-- easing -->
    <script src="~/Templates/web/js/easing.js"></script>
    <!--  necessary snippets for few javascript files -->
    <script src="~/Templates/web/js/cleaning.js"></script>

    <script src="js/bootstrap.js"></script>
    <!-- Necessary-JavaScript-File-For-Bootstrap -->
    <!-- //Js files -->

</body>

</html>